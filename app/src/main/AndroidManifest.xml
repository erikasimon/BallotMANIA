<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="erikasimon.ballot" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".myActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".loginScreen"
            android:label="@string/title_activity_login_screen"
            android:parentActivityName=".myActivity" >
        </activity>
        <activity
            android:name=".newUserScreen"
            android:label="@string/title_activity_new_user_screen" >
        </activity>
        <activity
            android:name=".createBallot"
            android:label="@string/title_activity_create_ballot" >
        </activity>
        <activity
            android:name=".MyBallotsActivity"
            android:label="@string/title_activity_my_ballots" >
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name=".ListBallots"
            android:label="@string/title_activity_list_ballots" >
        </activity>
    </application>

</manifest>
