<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".myActivity"
    android:id="@+id/home"
    android:onClick="login"
    android:backgroundTint="#ff030303"
    android:background="#ff242321">

    <TextView android:text="Welcome To Ballot Mania!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In!"
        android:id="@+id/button"
        android:textColor="@android:color/holo_red_dark"
        android:background="#ff020200"
        android:onClick="login"
        android:clickable="true"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User!"
        android:id="@+id/button2"
        android:background="#ff030300"
        android:onClick="newUser"
        android:clickable="true"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:layout_above="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:contentDescription="oscarfigure"
        android:src="@drawable/oscarmini"
        android:layout_below="@+id/button"
        android:adjustViewBounds="false"
        android:background="@mipmap/ic_oscar" />

</RelativeLayout>



